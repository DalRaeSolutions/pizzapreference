<mvc:View
    controllerName="com.dalraesolutions.pizzapreference.pizzapreferencetile.controller.Tile"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:data="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:microchart="sap.suite.ui.microchart"
>
    <GenericTile
        header="{/title}"
        sizeBehavior="Small"
        subheader="{/subTitle}"
        press="onPress">
        <TileContent>
            <VBox>
                
                
                <Label text="Pizza: {/pizzaType}"/>
                <Link
                    text="Google Search"
                    press="handleLinkPress"
                    target="_blank"
                    />

            </VBox>
        </TileContent>
    </GenericTile>
</mvc:View>
